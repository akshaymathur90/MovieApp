<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/rl_margin_top"
    android:layout_marginBottom="@dimen/rl_margin_bottom">
    <ImageView
        android:id="@+id/iv_movie_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:src="@mipmap/ic_launcher"
        android:layout_marginRight="@dimen/widget_margin_right"
        android:layout_marginEnd="@dimen/widget_margin_right"
        />

    <TextView
        android:id="@+id/tv_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_movie_poster"
        android:layout_toRightOf="@+id/iv_movie_poster"
        tools:text="TextView"
        android:layout_marginRight="@dimen/widget_margin_right"
        android:layout_marginEnd="@dimen/widget_margin_right"
        android:textSize="@dimen/text_size_title"/>

    <TextView
        android:id="@+id/tv_movie_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_movie_name"
        android:layout_toEndOf="@+id/iv_movie_poster"
        android:layout_toRightOf="@+id/iv_movie_poster"
        tools:text="TextView"
        android:layout_marginTop="@dimen/widget_margin_top"
        android:layout_marginRight="@dimen/widget_margin_right"
        android:layout_marginEnd="@dimen/widget_margin_right"
        android:maxLines="4"/>
</RelativeLayout>
</RelativeLayout>
</layout>